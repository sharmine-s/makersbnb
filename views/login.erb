<head>
    <title>Login</title>
    
</head>
<body>
  
    <% if flash[:error] %>
        <%= flash[:error] %>
    <% end %>
    <form action="/login" method="POST">
    <h1>Login</h1>  

        <div>
        <label>Email</label>
        <input type="email" name="email">
        </div>

        <div>
        <label>Password</label>
        <input type="password" name="password">
        </div>

        <div>
        <input type="submit" value="Submit the form">
        </div>

    </form>
</body>

