<html>
    <head>
        <style>
        h1 {text-align: center;}
        p {text-align: center;}
        div {text-align: center;}
        </style>
    </head>

    <body>

     <h1><%= @listing.title %></h1><br />
     <p>
        <%= @listing.location %><br />
        <%= @listing.description %><br />
        <%= @listing.price %>/night<br />
       <img src='<%= @listing.img %>' alt='Nicolas Cage'>
     
         <h2>Booking Request</h2>
        <form action="/booking/<%=@listing.id%>" method="POST">
            <label>Name:</label>
            <input type="text" name="name">
            <label>Comment:</label>
            <input type="text" name="additional information"> <br> <br>
            <label for>Pick a date:</label> <br>
            <input type="checkbox" id="date1" name="date_1" value="true">
            <label for="date1"> 1st August</label><br>

            <input type="checkbox" id="date2" name="date_2" value="true">
            <label for="date2"> 2nd August</label><br>

            <input type="checkbox" id="date3" name="date_3" value="true">
            <label for="date3"> 3rd August</label><br>

            <input type="checkbox" id="date4" name="date_4" value="true">
            <label for="date4"> 4th August</label><br>

            <input type="checkbox" id="date5" name="date_5" value="true">
            <label for="date5"> 5th August</label><br>

            <input type="checkbox" id="date6" name="date_6" value="true">
            <label for="date6"> 6th August</label><br>

            <input type="checkbox" id="date7" name="date_7" value="true">
            <label for="date7"> 7th August</label><br> <br>
       
            <input type="submit" name="Submit">
        </form>
    </p>

        <a href="/"><button type="button">Go back Main Page</button></a>

    </body>
</html>