<html>
    <head>
        <style>
        h1 {text-align: center;}
        p {text-align: center;}
        div {text-align: center;}
        </style>
    </head>

    <body>

     <h1><%= @listing.title %></h1><br />
     <p>
        <%= @listing.location %><br />
        <%= @listing.description %><br />
        <%= @listing.price %>/night<br />
       <img src='<%= @listing.img %>' alt='Nicolas Cage'>
     
         <h2>Booking Request</h2>
        <form action="/booking/<%=@listing.id%>" method="POST">
            <label>Name:</label>
            <input type="text" name="name">
            <label>Comment:</label>
            <input type="text" name="additional information"> <br> <br>
            <label for>Pick a date:</label> <br>
            <button name="date1" value="true">1st of August</button>
            <button name="date2" value="true">2nd of August</button>
            <button name="date3" value="true">3rd of August</button>
            <button name="date4" value="true">4th of August</button>
            <button name="date5" value="true">5th of August</button>
            <button name="date6" value="true">6th of August</button>
            <button name="date7" value="true">7th of August</button>
       <br><br>
            <input type="submit" name="Submit">

        </form>
    </p>

        <a href="/"><button type="button">Go back Main Page</button></a>

    </body>
</html>